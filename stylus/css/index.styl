*
  margin 0
  padding 0
  outline 0
  font-family "Microsoft YaHei", sans-serif
  font-size 1.1em
#hd
  position absolute
  width 465px
  left 29%
  top 20%
  text-align center
  line-height 150px
  box-shadow 0px 0px 10px red
  div
    width 150px
    height 150px
    margin 0 5px 5px 0
    box-shadow 0px 0px 10px aqua
    border-radius 50%
    background-color yellow
    text-align center
    float left
    line-height 150px
#box
  width 150px
  height 150px
  margin 0 5px 5px 0
  position absolute
  border-radius 50%
  text-align center
  line-height 150px
  box-shadow 0px 0px 20px yellow
  left 0
  top 0
  background-color red
  &:hover
    color yellow



  